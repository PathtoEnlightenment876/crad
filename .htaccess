<IfModule mod_rewrite.c>
    Options +FollowSymLinks -Indexes
    RewriteEngine On

    # Serve /storage/* files
    RewriteCond %{DOCUMENT_ROOT}/storage/app/public/$1 -f
    RewriteRule ^storage/(.*)$ storage/app/public/$1 [L]

    # --- 2. Laravel routing fallback ---
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ public/$1 [L]

    # --- 3. Redirect root URL to public/index.php ---
    RewriteRule ^$ public/index.php [L]
</IfModule>

<Files .env>
 Order allow,deny
 Deny from all
</Files>
RedirectMatch 404 /\.

<FilesMatch "^(\.env|artisan|composer\.json|composer\.lock|package\.json|webpack\.mix\.js|server\.php|.gitignore|.gitattributes)$">
    Order allow,deny
    Deny from all
</FilesMatch>

<IfModule mod_headers.c> 
Header set X-Content-Type-Options "nosniff" 
Header set X-Frame-Options "SAMEORIGIN" 
Header set X-XSS-Protection "1; mode=block" 
</IfModule>
